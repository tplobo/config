###############################################################################
# Echo                                                                        #
###############################################################################

# Config messages
red='\033[31;1m'
green='\033[32;1m'
yellow='\033[33;1m'
reset='\033[0m'
function echo_red () { echo $red"$1"$reset; }
function echo_green () { echo $green"$1"$reset; }
function echo_yellow () { echo $yellow"$1"$reset; }

function echo_header() {
    local LEVEL="$1"
    shift
    local CHAR_UPPER
    local CHAR_LOWER
    
    case $LEVEL in
        1)
            CHAR_UPPER="#"
            CHAR_LOWER="#"
            ;;
        2)
            CHAR_UPPER="*"
            CHAR_LOWER="*"
            ;;
        3)
            CHAR_UPPER="~"
            CHAR_LOWER="~"
            ;;
        4)
            CHAR_UPPER="-"
            CHAR_LOWER="-"
            ;;
        5)
            CHAR_UPPER="_" # Unicode: U+005F
            CHAR_LOWER="¯" # Unicode: U+00AF
            ;;
        *)
            echo "Error: Unsupported header level." >&2
            return 1
            ;;
    esac
    
    local ARG_LENGTH=$(echo -n "$*" | wc -m)
    local MIN_LENGTH=80
    local LENGTH=$(( ARG_LENGTH > MIN_LENGTH ? ARG_LENGTH : MIN_LENGTH ))
    
    printf "%0.s$CHAR_UPPER" $(seq 1 $LENGTH); echo
    echo "$@"
    printf "%0.s$CHAR_LOWER" $(seq 1 $LENGTH); echo
}


###############################################################################
# Git                                                                         #
###############################################################################

# Backup repository in current directory including all history and LFS
# (`--mirror` avoided because it lacks work-tree, so cannot checkout)
# See: https://stackoverflow.com/questions/74981712/clone-git-repo-with-all-lfs-objects
# See: https://stackoverflow.com/questions/62483417/can-i-checkout-branch-from-local-git-mirror-clone
function git-backup() {
    REMOTE=$1
    git clone $REMOTE .
    git -C . lfs fetch --all
}

# Clean repository in current directory with complete prune 
function git-prune() {
    git reflog expire --all --expire=now 
    git lfs prune
    git gc --aggressive --prune=now
}

# Recursively find all configuration files in directory
alias git-list-gitignore="find . -type f -name '.gitignore'"
alias git-list-gitattributes="find . -type f -name '.gitattributes'"

# Measure full size of git repository in current directory
alias git-size="git gc && du -sh .git/"

# List all files in LFS history of repository in current directory
# See: https://github.com/git-lfs/git-lfs/blob/main/docs/man/git-lfs-ls-files.adoc
alias git-list-lfs="git lfs ls-files --all --long --size"

# List all files in history of repository in current directory, sort by size
# See: https://gist.github.com/magnetikonline/dd5837d597722c9c2d5dfa16d8efe5b9#file-gitlistobjectbysize-sh
function git-list-size {
    # Does not include LFS files
	git rev-list --all | xargs -n1 git ls-tree --long -r | sort -k3 | uniq | sort -nk4
}


